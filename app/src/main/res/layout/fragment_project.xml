<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cream"
    tools:context=".navigatuindrawer.ProjectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@drawable/skill_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_10"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="23sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gabriela"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_01"
                android:layout_width="350dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_marginStart="1100dp"
                app:cardBackgroundColor="@color/skill_3"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sara"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginStart="20dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginStart="20dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="60dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_02"
                android:layout_width="350dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="@color/skill_3"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sara"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginStart="20dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginStart="20dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="60dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_03"
                android:layout_width="350dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="@color/skill_3"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sara"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginStart="20dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginStart="20dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="60dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_04"
                android:layout_width="350dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="@color/skill_3"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sara"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginStart="20dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/gabriela"
                    android:layout_marginStart="20dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="60dp"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </HorizontalScrollView>

</LinearLayout>