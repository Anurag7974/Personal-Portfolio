<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">

    <shape
        android:innerRadiusRatio="3.2"
        android:shape="ring"
        android:thickness="18dp"
        android:useLevel="true">
        <!--The above line will fix the issue fur api 21 -->

        <gradient
            android:angle="0"
            android:type="sweep"
            android:endColor="@color/status_bar_color"
            android:startColor="@color/yellow_02"
            android:useLevel="false"/>
    </shape>

</rotate>